{
  "extends": ["config:base"],
  "groupName": "all dependencies",
  "separateMajorMinor": false,
  "groupSlug": "all",
  "packageRules": [
    {
      "packagePatterns": ["*"],
      "groupName": "all dependencies",
      "groupSlug": "all",
      "automerge": true
    }
  ],
  "rangeStrategy": "bump",
  "automerge": true,
  "automergeType": "pr",
  "platformAutomerge": true,
  "dependencyDashboard": true,
  "schedule": "before 3am every day",
  "lockFileMaintenance": {
    "enabled": true,
    "automerge": true
  },
  "labels": ["dependencies", "automerge"]
}
