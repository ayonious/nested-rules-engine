{
  "compilerOptions": {
    "outDir": "dist",
    "target": "es2017",
    "noImplicitAny": false,
    "strictNullChecks": true,
    "module": "commonjs",
    "declaration": true,
    "lib": ["es2017"],
    "strict": true,
    "types": ["jest"],
    "resolveJsonModule": true,
    "esModuleInterop": true
  },
  "include": ["src/**/*", "index.ts"],
  "exclude": ["test/**/*", "**/*.test.ts", "**/*.spec.ts", "dist/**/*", "node_modules/**/*"]
}
