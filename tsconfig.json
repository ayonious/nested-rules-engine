{
  "compilerOptions": {
    "outDir": "dist",
    "target": "es2020",
    "noImplicitAny": false,
    "strictNullChecks": true,
    "module": "es2020",
    "esModuleInterop": true,
    "lib": ["es2020"],
    "declaration": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "strict": true,
    "types": ["node", "jest"],
    "allowSyntheticDefaultImports": true
  },
  "include": ["src/**/*"],
  "exclude": [
    "test/**/*",
    "**/*.test.ts",
    "**/*.spec.ts",
    "dist/**/*",
    "node_modules/**/*"
  ]
}
