{
  "compilerOptions": {
    "outDir": "dist",
    "target": "es2017",
    "noImplicitAny": false,
    "strictNullChecks": true,
    "module": "es2020",
    "declaration": true,
    "lib": ["es2017"],
    "strict": true,
    "types": ["jest"],
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node"
  },
  "include": ["src/**/*", "index.ts"],
  "exclude": [
    "test/**/*",
    "**/*.test.ts",
    "**/*.spec.ts",
    "dist/**/*",
    "node_modules/**/*"
  ]
}
